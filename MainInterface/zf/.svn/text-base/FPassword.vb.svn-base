    Private Sub btnOK_Click(ByVal sender As System.Object, ByVal e As System.EventArgs) Handles btnOK.Click
        If txtPassword.Text <> txtConfirm.Text Then
            MessageBox.Show("新密码与校验密码不同，请确认新密码。", "无效的口令", MessageBoxButtons.OK, MessageBoxIcon.Information)
            txtPassword.Focus()
            Me.DialogResult = DialogResult.None
            Return
        End If

        Try
            wsPermission.SetPassword(txtPassword.Text, txtOldPassword.Text, UserName)
        Catch ex As System.Web.Services.Protocols.SoapException
            If ex.Actor = "InvalidPasswordException" Then
                MessageBox.Show("无效的原始口令，请确定您指定的原始口令是否正确。" + Environment.NewLine + _
                 "口令是区分大小写的，注意您键盘的大小写锁定键是否按下。", "无效的口令", MessageBoxButtons.OK, MessageBoxIcon.Warning)
                txtOldPassword.Focus()
            End If

            Me.DialogResult = DialogResult.None
        Catch ex As System.Exception
            MessageBox.Show(ex.Message, ex.Source)
            Me.DialogResult = DialogResult.None
        End Try
    End Sub

